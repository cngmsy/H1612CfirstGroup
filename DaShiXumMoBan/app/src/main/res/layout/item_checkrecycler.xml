<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_check_show"
        android:layout_width="80dp"
        android:layout_marginTop="5dp"
        android:layout_height="80dp"
        />
    <RelativeLayout
        android:layout_toRightOf="@id/iv_check_show"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_check_name"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv_check_content"
            android:textSize="12sp"
            android:layout_below="@id/tv_check_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@id/tv_check_content"
            android:textSize="16sp"
            android:textColor="#f00"
            android:id="@+id/tv_tv_check_newprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_check_count"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/count"
            android:gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </RelativeLayout>
</RelativeLayout>