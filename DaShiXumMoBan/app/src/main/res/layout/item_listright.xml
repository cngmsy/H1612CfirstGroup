<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_goods_show"
        android:layout_width="160px"
        android:layout_marginTop="10px"
        android:layout_height="160px"
        />
    <RelativeLayout
        android:layout_toRightOf="@id/iv_goods_show"
        android:layout_marginLeft="10px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_goods_name"
            android:textSize="20sp"
            android:layout_marginTop="20px"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="10px"
            android:id="@+id/tv_goods_content"
            android:textSize="14sp"
            android:layout_below="@id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_goods_sell"
            android:textSize="16sp"
            android:layout_below="@id/tv_goods_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="10px"
            android:layout_below="@id/tv_goods_sell"
            android:textSize="18sp"
            android:textColor="#f00"
            android:id="@+id/tv_goods_newprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="20px"
            android:id="@+id/tv_goods_oldprice"
            android:textSize="16sp"
            android:layout_marginLeft="6px"
            android:layout_toRightOf="@id/tv_goods_newprice"
            android:layout_alignBottom="@id/tv_goods_newprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@mipmap/food_button_add"
            android:id="@+id/iv_goods_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_goods_oldprice"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/tv_goods_count"
            android:layout_toLeftOf="@id/iv_goods_add"
            android:layout_alignBottom="@id/iv_goods_add"
            android:textSize="14sp"
            android:layout_alignTop="@id/iv_goods_add"
            android:layout_marginRight="6px"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_goods_remove"
            android:layout_toLeftOf="@id/tv_goods_count"
            android:layout_alignBottom="@id/tv_goods_count"
            android:layout_marginRight="6px"
            android:visibility="invisible"
            android:src="@mipmap/food_button_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>